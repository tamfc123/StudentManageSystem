<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:text="Cập nhật lớp học"
        android:gravity="center"
        android:textSize="30sp"
        android:background="#ffcc"
        android:id="@+id/txtClassLabel"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:id="@+id/tableLayout1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtClassLabel"
        android:layout_marginTop="17sp"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtCodeClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lớp:"/>
            <EditText
                android:id="@+id/edtEditClassCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>
            <requestFocus/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên lớp:"/>
            <EditText
                android:id="@+id/edtEditClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtClassNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sỉ số:"/>
            <EditText
                android:id="@+id/edtEditClassNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0sp"
        android:layout_below="@+id/tableLayout1">
        <Button
            android:id="@+id/btnSaveEditClass"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18sp"
            android:text="Cập nhật"/>
        <Button
            android:id="@+id/btnClearEditClass"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Xóa trắng"/>
        <Button
            android:id="@+id/btnCloseEditClass"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="Đóng"/>
    </LinearLayout>
</RelativeLayout>